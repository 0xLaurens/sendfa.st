---
import Toaster from "../components/toast/Toaster.svelte";
interface Props {
    title: string;
}

import '@fontsource-variable/gabarito';
const {title} = Astro.props;
---

<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="description"
          content="Instantly share images, videos, PDFs from one device to another. No file size limits. Complete privacy."/>
    <meta name="viewport" content="width=device-width"/>
    <meta name="application-name" content="sendfast"/>
    <meta name="keywords" content="sendfast, transfer files, share files, p2p files, file sharing"/>

    <meta property="og:title" content="Sendfast - Fast, Secure File Sharing"/>
    <meta property="og:description" content="Instantly share images, videos, PDFs from one device to another. No file size limits. Complete privacy."/>
    <meta property="og:image" content="https://sendfa.st/sendfast.png"/>
    <meta property="og:url" content="https://sendfa.st"/>
    <meta property="og:type" content="website"/>

    <meta name="twitter:card" content="summary_large_image"/>
    <meta name="twitter:title" content="Sendfast - Fast, Secure File Sharing"/>
    <meta name="twitter:description" content="Instantly share images, videos, PDFs from one device to another. No file size limits. Complete privacy."/>
    <meta name="twitter:image" content="https://sendfa.st/sendfast.png"/> <!-- Replace with actual image URL -->

    <link rel="canonical" href="https://sendfa.st"/>

    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <link rel="sitemap" href="/sitemap-index.xml"/>
    <meta name="generator" content={Astro.generator}/>
    <title>{title}</title>
</head>
<body>
<main class="min-h-screen">
    <Toaster client:only="svelte"/>
    <slot/>
</main>
</body>
</html>

<style is:global>
    * {
        font-family: 'Gabarito Variable', system-ui;
    }

    .btn-primary {
        color: white;
    }
</style>