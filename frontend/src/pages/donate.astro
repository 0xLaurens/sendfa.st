---
import Layout from "../layouts/Layout.astro";
import {Coffee} from "lucide-astro";
import Navbar from "../components/Navbar.astro";
import CopyButton from "../components/CopyButton.svelte";

const xmr = "41tP5ph74YBgA5ohQfcZdZg1pX5fb1cknU5FtNvp6ETdEzDWLFMDazfT4QQboyn5J1Der4pdGSZ8gcG6KhpDfoHpRsaF3XF";
const btc = "bc1qmvkshvz3j44svns792q2asy4p5tvnwt6w2vwp8";
const eth = "0x31E090F6dcFb5EFcF4A3b4e314A26C5DC3f4AfC1";
---
<Layout title="SendFast • donations">
    <div class="min-h-screen flex flex-col">
        <Navbar/>
        <section id="donate"
                 class="flex flex-1 flex-col items-center justify-center bg-base-100 mx-auto max-w-3xl px-6 xl:px-0">
            <h1 class="text-4xl font-bold mb-8 max-w-2xl">Support the project</h1>
            <p class="text-gray-500 text-center mb-8 max-w-2xl">Your donations keep the website up and running. Below
                are
                some options
                in which
                you can donate some money. It's much appreciated :)</p>
            <div class="card card-bordered shadow-xl bg-base-100 w-full">
                <div class="card-body gap-8">
                    <div class="pb-16">
                        <h2 class="card-title">Please donate ❤️</h2>
                        <p>It helps the development and maintenance of the website.</p>

                    </div>
                    <div class="flex flex-col w-full gap-4">
                        <a href="https://paypal.me/0xlaurens" target="_blank"
                           class="btn btn-neutral btn-outline w-full">
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="#000000"
                                 viewBox="0 0 256 256">
                                <path d="M220.12,93.54a55.8,55.8,0,0,0-20.19-16.18A56,56,0,0,0,144,24H84A16,16,0,0,0,68.48,36.12l-36,144A16,16,0,0,0,48,200h27.5l-3,12.12A16,16,0,0,0,88,232h31.5A16,16,0,0,0,135,219.88L144,184h32a56,56,0,0,0,44.14-90.46ZM48,184,84,40h60a40,40,0,0,1,39.3,32.49A57,57,0,0,0,176,72H120a16,16,0,0,0-15.53,12.12L79.52,184H48ZM183,88.62c-.08.36-.15.72-.24,1.08A39.94,39.94,0,0,1,144,120H112l8-32h56A40.07,40.07,0,0,1,183,88.62Zm31.76,49.08A39.94,39.94,0,0,1,176,168H144a16,16,0,0,0-15.52,12.12l-9,35.88H88l20-80h36a55.9,55.9,0,0,0,54-41.39,40.2,40.2,0,0,1,9.48,8.77A39.73,39.73,0,0,1,214.78,137.7Z"></path>
                            </svg>
                            PayPal</a>
                        <a href="https://ko-fi.com/0xlaurens" target="_blank" class="btn btn-neutral w-full">
                            <Coffee/>
                            Ko-Fi</a>
                    </div>
                    <div>
                        <div class="flex items-center justify-between border-b last:border-b-0 py-4 gap-4">
                            <div class="w-full">
                                <p class="font-medium">Bitcoin (BTC)</p>
                                <div class="flex w-full gap-4 items-center">
                                    <label aria-label="xmr crypto address" class="w-full">
                                        <input class="input input-sm input-bordered w-full" value={btc}/>
                                    </label>
                                    <CopyButton subject="address" contentToCopy={btc} client:idle/>
                                </div>
                            </div>
                        </div>
                        <div class="flex items-center justify-between border-b last:border-b-0 py-4 gap-4">
                            <div class="w-full">
                                <p class="font-medium">Ethereum (ETH)</p>
                                <div class="flex w-full gap-4 items-center">
                                    <label aria-label="xmr crypto address" class="w-full">
                                        <input class="input input-sm input-bordered w-full" value={eth}/>
                                    </label>
                                    <CopyButton subject="address" contentToCopy={eth} client:idle/>
                                </div>
                            </div>
                        </div>
                        <div class="flex items-center justify-between border-b last:border-b-0 py-4 gap-4">
                            <div class="w-full">
                                <p class="font-medium">Monero (XMR)</p>
                                <div class="flex w-full gap-4 items-center">
                                    <label aria-label="xmr crypto address" class="w-full">
                                        <input class="input input-sm input-bordered w-full" value={xmr}/>
                                    </label>
                                    <CopyButton subject="address" contentToCopy={xmr} client:idle/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <p class="text-gray-500 text-center mt-8">Thank you for your support!</p>
        </section>
    </div>
</Layout>

